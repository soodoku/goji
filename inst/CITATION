citHeader("To cite package 'goji' in publications use:")
     
year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
vers <- paste("R package version", meta$Version)
 
citEntry(entry="Manual",
		  title = "goji: Convenient Miscellaneous Functions",
		  author = personList(as.person("Gaurav SOod")),
		  year = year,
		  note = vers,
		  textVersion =
		  paste("Gaurav Sood (",
				year,
				"). goji: Convenient Miscellaneous Functions. ",
				vers, ".", sep=""))